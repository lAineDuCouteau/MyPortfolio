{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./server",
    "types": ["node", "express"]
  },
  "include": [
    "server/**/*.ts",       // Include all .ts files
    "server/**/*.tsx",      // Include all .tsx files (React components)
    "server/declarations.d.ts"  // Explicitly include the declaration file
  ],
  "exclude": ["node_modules"]
}
